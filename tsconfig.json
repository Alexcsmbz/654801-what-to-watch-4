{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "config": ["src/config.ts"],
      "store/*": ["src/store/*"],
      "hocs/*": ["src/hocs/*"],
      "middleware/*": ["src/middleware/*"],
      "ducks/*": ["src/ducks/*"],
      "types/*": ["src/types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}